{
    "name": "Owned Cards",
    "version": "1.0",
    "description": "Extension for highlighting cards owned on certain MTG sites.",
    "permissions": ["storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        { 
          "matches": ["https://*.edhrec.com/*"],
          "js": ["edhrec.js"]
        }
      ],
    "manifest_version": 2
  }